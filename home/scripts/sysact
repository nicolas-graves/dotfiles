#!/bin/sh

# A dmenu-like wrapper script for system functions.

cmds="\
🔒 lock	/run/setuid-programs/swaylock
🚪 exit sway	swaymsg exit
♻ reload sway	swaymsg reload
😪 suspend	loginctl suspend
🐻 hibernate	loginctl suspend-then-hibernate
🔃 reboot	loginctl reboot
🖥 shutdown	loginctl poweroff"

choice="$(echo "$cmds" | cut -d'	' -f 1 | ${MENU})" || exit 1

eval "$(echo "$cmds" | grep "^$choice	" | cut -d '	' -f2-)"
